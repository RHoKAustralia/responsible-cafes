<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name),html: { novalidate: false }) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :email, :required => true, :autofocus => true %>
    <%= f.input :business_name, required: true %>
    <%= f.input :about, as: :text, required: true, placeholder: 'Tell us a little about your cafe' %>
    <%= f.input :phone, required: true %>
    <%= f.input :address_line_1, required: true %>
    <%= f.input :address_line_2, required: true %>
    <%= f.input :suburb, :required => true %>
    <%= f.input :postcode, :required => true %>
    <br>
    <%= f.select :state, [
          'New South Wales',
          'Australian Capital Territory', 
          'Queensland',
          'South Australia',
          'Tasmania',
          'Victoria',
          'Western Australia'
        ], prompt: 'State', required: true %>
    <%= f.input :contact_person, :required => true %>
    <br>
    <%= f.input :motivation, as: :text, placeholder: 'Tell us about your motivation for joining Responsible Cafes' %>
    <br>
    <%= f.input :website %>
    <%= f.input :facebook, placeholder: 'https://www.facebook.com/ResponsibleCafes/?fref=ts' %>
    <%= f.input :instagram, placeholder: 'https://instagram.com/responsiblecafes' %>
    <%= f.input :twitter, placeholder: '@ResponsibleCafes' %>
    <br>
    <%= f.input :discount, :required => true, placeholder: '$0.10', hint: 'Discount given per come e.g. $0.20' %>
    <br>
    <br>
    <br>
    <%= f.input :password, required: true %>
    <%= f.input :password_confirmation, required: true %>
  </div>
  <br>
  <div class="actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

