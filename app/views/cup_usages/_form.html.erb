<%= simple_form_for(@cup_usage) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  </div>

  <div class="form-actions">

  <%= f.select :year, [Date.today.year, Date.today.year - 1, Date.today.year - 2],
    prompt: 'Year',
    selected: Date.today.year
    %>

  <%= f.select :month, Date::MONTHNAMES.compact.each_with_index.collect{|m,i| [m,i]},
    prompt: 'Month',
    selected: Date.today.month - 1
    %>

    <div>
      <%= f.label :reusable_cups %>
      <%= f.text_field :reusable_cups %>
    </div>

    <div>
      <%= f.label :disposable_cups %>
      <%= f.text_field :disposable_cups %>
    </div>


    <div>
      <%= f.label :dine_in_cups %>
      <%= f.text_field :dine_in_cups %>
    </div>

    <%= f.button :submit %>
  </div>
<% end %>
